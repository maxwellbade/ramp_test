df = pd.DataFrame()
df['transaction_amount'] = transaction_amount
df['transaction_amount'] = df['transaction_amount'].astype(float)
df['transaction_time'] = transaction_time
df['transaction_time'] = df['transaction_time'].str[:10]
df['transaction_time'] = df['transaction_time'].astype('datetime64')
df = df.groupby(['transaction_time'])['transaction_amount'].agg(sum).reset_index()
df['3_day_moving_avg'] = df.rolling(window=3).mean().fillna(0)

df = df.sort_values(by='transaction_time',ascending=False)
print('January 31 Rolling 3 Day Avg.:', df[df['transaction_time'] == '2021-01-31']['3_day_moving_avg'])
display(df.head())

fig = px.bar(df
              ,x='transaction_time'
              ,y='transaction_amount'
              ,template='plotly_dark'
              ,text='transaction_amount'
              ,title='transaction_amount'
             )
fig.show()

fig = px.bar(df
              ,x='transaction_time'
              ,y='3_day_moving_avg'
              ,template='plotly_dark'
              ,text='3_day_moving_avg'
              ,title='3 day moving average'
             )
fig.show()
